<div class="container">
<% if @questions %>
  <% @questions.reverse.each do |question| %>
      <div class="row" id="folowers_q">
              <!-- Question User  -->
              <div class="col-sm-3">
                <div class="well" align="center">
                 <p><%= question.user.name %></p>
                 <img src="/img/<%= question.user.img %>" class="img-circle" height="55" width="55" alt="Avatar">
                </div>
              </div>
              <!-- Question question -->
              <div class="col-sm-9">
                <div class="well">
                  <a href='/answers/<%= question.id %>'><h3><%= question.title %></h3></a>
                  <p><%= question.body %></p>
                  <a href="/question/like/<%= question.id %>">
                    <button type="button" class="btn btn-default btn-sm">
                    <span class="glyphicon glyphicon-thumbs-up"></span> Like
                    </button>
                  </a>
                  <p id="likes">Likes: <%= question.likes %></p>
                </div>
              </div>
      </div>
  <% end %>
<% end  %>
</div>
